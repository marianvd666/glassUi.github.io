# ============================================================================
# SECUREAUTH - ENVIRONMENT VARIABLES TEMPLATE
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!
# ============================================================================

# ============================================================================
# CORE APPLICATION
# ============================================================================

# Next.js environment
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ============================================================================
# DATABASE (Choose one)
# ============================================================================

# SUPABASE (Recommended for quickstart)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# FIREBASE (Alternative)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-firebase-auth-domain
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id

# MONGODB (Alternative)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# ============================================================================
# AUTHENTICATION - GOOGLE OAUTH
# ============================================================================

NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================================================
# AUTHENTICATION - FACEBOOK OAUTH
# ============================================================================

NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ============================================================================
# AUTHENTICATION - NEXT-AUTH
# ============================================================================

NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-generate-with-openssl-rand-base64-32

# ============================================================================
# EMAIL SERVICE (for password reset emails)
# ============================================================================

# RESEND (Recommended - easiest)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# SENDGRID (Alternative)
SENDGRID_API_KEY=your-sendgrid-api-key

# MAILGUN (Alternative)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.yourdomain.com

# SMTP (DIY)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ============================================================================
# STORAGE (Optional - for profile pictures, documents)
# ============================================================================

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-east-1

# VERCEL BLOB
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token

# ============================================================================
# THIRD-PARTY SERVICES
# ============================================================================

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=your-sentry-dsn

# Monitoring
LOGTAIL_TOKEN=your-logtail-token

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Debug mode
DEBUG=false
NEXT_PUBLIC_DEBUG=false

# Seed data
SEED_DATABASE=false

# ============================================================================
# PRODUCTION ONLY
# ============================================================================

# When deploying to production
# NEXT_PUBLIC_APP_URL=https://yourdomain.com
# NODE_ENV=production
